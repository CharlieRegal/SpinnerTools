<?xml version="1.0" encoding="utf-8"?>
<resources>
    <declare-styleable name="Spinner">
        <attr name="DisplayMember" format="string" />
        <attr name="Searchable" format="boolean"/>
        <attr name="Title" format="string"/>
        <attr name="DismissWhenSelected" format="boolean"/>
        <attr name="backgroundColor" format="color"/>
        <attr name="hintTextColor" format="color"/>
        <attr name="textColor" format="color"/>
        <attr name="iconColor" format="color"/>

        <attr name="hint_bottomMargin" format="dimension" />

        <attr name="mode" format="enum">
            <enum name="SINGLE" value="0" />
            <enum name="MULTI" value="1" />
        </attr>

    </declare-styleable>

</resources>